@model IEnumerable<Credibled.Models.Referee>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefereeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefereeEmployer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefereeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefereeTelephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefereeTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Enabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefereeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefereeEmployer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefereeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefereeTelephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefereeTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
